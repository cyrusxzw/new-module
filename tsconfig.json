{
  "preset": "ts-jest/presets/js-with-babel",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/dts",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "jsx": "react",
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}

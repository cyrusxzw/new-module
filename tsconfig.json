{
  "preset": "ts-jest/presets/js-with-babel",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dts",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "jsx": "react",
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src"],
  "exclude": [
    "**/*.spec.*",
    "**/*.spec.*",
    "**/*.module.css",
    "**/*.stories.*",
    "**/*.md",
    "**/*.mdx"
  ]
}

{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dts",
    "emitDeclarationOnly": true,
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "exclude": ["**/*.spec.*", "**/*.stories.*", "**/*.md*"]
}
